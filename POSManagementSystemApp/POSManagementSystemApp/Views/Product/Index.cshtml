@using System.Web.Optimization
@model IEnumerable<POSManagementSystem.Models.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sl = 1;
}

<h2>Product</h2>
<p>@Html.ActionLink("Add Product", "Add", "Product")</p>

<table class="table table-bordered table-striped" id="productTable">
    <thead>
        <tr>
            <th>@Html.Raw("SL")</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Code)</th>
            <th>@Html.DisplayNameFor(model => model.CategoryId)</th>
            <th>@Html.DisplayNameFor(model => model.ReorderLevel)</th>
            <th>@Html.DisplayNameFor(model => model.Discription)</th>
            <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(sl++)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Code)</td>
            <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.ReorderLevel)</td>
            <td>@Html.DisplayFor(modelItem => item.Discription)</td>
            <td><img src="@Url.Content(Convert.ToString(item.ImagePath))" width="50" height="50" /></td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts
{
    @*@Scripts.Render("~/bundles/jqueryval")*@

    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>

    <script>
        function activatejQueryTable() {
            $("#productTable").DataTable();
        }

        $(function() {
            activatejQueryTable();
        });

    </script>
}